{
  "name": "simple-music",
  "version": "0.0.21",
  "description": "基于 Electron + Vue3 + TypeScript 的现代音乐播放器",
  "main": "dist-electron/main.js",
  "author": {
    "name": "oliver-xie666",
    "email": "153884673@qq.com"
  },
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "dev:electron": "cross-env ELECTRON_MODE=true vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:web": "vue-tsc --noEmit && vite build",
    "build:electron": "vue-tsc --noEmit && cross-env ELECTRON_MODE=true vite build && npx electron-builder --publish never",
    "build:electron:release": "node scripts/build-electron-release.mjs",
    "preview": "vite preview",
    "preview:web": "vite preview",
    "release": "standard-version",
    "release:publish": "npm run release && git push origin main --follow-tags"
  },
  "dependencies": {
    "@iconify-json/carbon": "^1.2.14",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@unocss/reset": "^0.58.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.0",
    "unocss": "^0.58.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^2.0.0",
    "wait-on": "^7.2.0"
  }
}
